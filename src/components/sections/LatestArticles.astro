      </div>
      
      <div class="grid md:grid-cols-3 gap-6">
        {
          posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="group block bg-white dark:bg-secondary border border-gray-200 dark:border-white/10 rounded-xl overflow-hidden hover:border-accent/50 transition-all">
