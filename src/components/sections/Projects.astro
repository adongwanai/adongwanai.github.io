---
interface Props {
  projects: any[];
}

const { projects } = Astro.props;
---
  <section id="projects" class="py-24 relative">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">ç²¾é€‰é¡¹ç›®</h2>
        <p class="text-gray-600 dark:text-gray-400">å¼€æºè´¡çŒ®ä¸ä¸ªäººä½œå“</p>
      </div>

       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 max-w-7xl mx-auto">
        {
          projects.map((project) => (
          <a href={project.data.link} target="_blank" class="group relative bg-white dark:bg-[#1a1c23] border border-gray-200 dark:border-white/10 rounded-xl p-6 hover:border-blue-500/50 hover:shadow-xl hover:shadow-blue-500/5 transition-all duration-300 flex flex-col">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity rounded-xl pointer-events-none"></div>
            
            <div class="flex justify-between items-start mb-4 relative z-10">
              <div class="text-3xl filter drop-shadow-sm">{project.data.icon}</div>
              <div class="flex gap-1.5 opacity-80">
                <span class="px-2 py-0.5 bg-gray-50 dark:bg-white/5 rounded-md text-[10px] text-gray-600 dark:text-gray-400 border border-gray-100 dark:border-white/5 flex items-center font-mono">â­ {project.dynamicStars}</span>
                <span class="px-2 py-0.5 bg-gray-50 dark:bg-white/5 rounded-md text-[10px] text-gray-600 dark:text-gray-400 border border-gray-100 dark:border-white/5 flex items-center font-mono">ğŸ´ {project.dynamicForks}</span>
              </div>
            </div>
            
            <h3 class="text-lg font-bold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300 flex items-center gap-2 relative z-10">
              {project.data.title}
              <svg class="w-4 h-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4 line-clamp-2 leading-relaxed flex-1 relative z-10">{project.data.description}</p>
            
            {project.data.reflection && (
            <div class="mb-4 p-2.5 bg-blue-50/80 dark:bg-blue-900/10 border border-blue-100 dark:border-blue-500/10 rounded-lg relative z-10">
              <p class="text-[11px] text-blue-700 dark:text-blue-300 font-medium italic line-clamp-1">{project.data.reflection}</p>
            </div>
            )}
            
            <div class="flex flex-wrap gap-1.5 mt-auto relative z-10">
              {project.data.tags.slice(0, 3).map((tag: string) => (
                <span class="px-2 py-0.5 bg-gray-100 dark:bg-white/5 rounded text-[10px] font-medium text-gray-500 dark:text-gray-400 border border-gray-200 dark:border-white/5">{tag}</span>
              ))}
              {project.data.tags.length > 3 && <span class="px-2 py-0.5 text-[10px] text-gray-400 font-medium font-mono">+{project.data.tags.length - 3}</span>}
            </div>
          </a>
        ))}
       </div>
    </div>
  </section>
