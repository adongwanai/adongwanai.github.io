---
/**
 * Visitor Statistics Component
 *
 * Badge-style statistics display
 */

const stats = [
  {
    label: "GitHub Stars",
    value: "2k+",
    color: "#24292e",
    icon: "‚≠ê"
  },
  {
    label: "Followers",
    value: "40k+",
    color: "#1f883d",
    icon: "üë•"
  },
  {
    label: "Visitors",
    value: "Tracking",
    color: "#0366d6",
    icon: "üìä"
  },
  {
    label: "LLM Community",
    value: "4k+",
    color: "#8957e5",
    icon: "ü§ñ"
  }
];
---

<div class="stats-section">
  <div class="stats-container">
    {stats.map((stat) => (
      <div class="stat-badge" style={`--badge-color: ${stat.color}`}>
        <div class="badge-icon">{stat.icon}</div>
        <div class="badge-label">{stat.label}</div>
        <div class="badge-value">{stat.value}</div>
      </div>
    ))}
  </div>
</div>

<style>
  .stats-section {
    padding: 2rem 1rem;
    border-top: 1px solid rgb(229 231 235);
  }

  :global(.dark) .stats-section {
    border-top-color: rgba(255, 255, 255, 0.1);
  }

  .stats-container {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
    align-items: center;
  }

  .stat-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    background: rgb(249 250 251);
    border: 1px solid var(--badge-color);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--badge-color);
    transition: all 0.2s ease;
    cursor: default;
  }

  :global(.dark) .stat-badge {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--badge-color);
  }

  .stat-badge:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px -2px var(--badge-color);
  }

  .badge-icon {
    font-size: 1rem;
    line-height: 1;
  }

  .badge-label {
    color: rgb(55 65 81);
  }

  :global(.dark) .badge-label {
    color: rgb(229 231 235);
  }

  .badge-value {
    font-weight: 600;
    font-size: 0.875rem;
  }
</style>
