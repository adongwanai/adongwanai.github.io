---
/**
 * Visitor Statistics Component
 *
 * Displays ClustrMaps visitor tracking widget
 * Uses JavaScript version for dynamic, real-time updates
 */
---

<div class="visitor-stats-section">
  <div class="visitor-stats-header">
    <h3 class="visitor-stats-title">
      üåç VISITOR STATISTICS
    </h3>
  </div>

  <div class="visitor-stats-content">
    <!-- ClustrMaps Script Widget -->
    <div class="clustrmaps-widget">
      <script
        id="clustrmaps"
        is:inline
        type="text/javascript"
        src="//clustrmaps.com/map_v2.js?d=NiPLw9UeKqKiyAOgzHHVc4iD0x55ATCD65234WLG5IQ&cl=ffffff&w=a"
      ></script>
    </div>
  </div>
</div>

<style>
  .visitor-stats-section {
    margin-top: 3rem;
    padding-top: 2rem;
    padding-bottom: 2rem;
    border-top: 1px solid rgb(229 231 235);
  }

  :global(.dark) .visitor-stats-section {
    border-top-color: rgba(255, 255, 255, 0.1);
  }

  .visitor-stats-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .visitor-stats-title {
    font-size: 0.875rem;
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas, monospace;
    font-weight: 400;
    color: rgb(107 114 128);
  }

  :global(.dark) .visitor-stats-title {
    color: rgb(156 163 175);
  }

  .visitor-stats-content {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 1rem;
  }

  .clustrmaps-widget {
    width: 100%;
    max-width: 800px;
    min-height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Ensure ClustrMaps container has space to render */
  .clustrmaps-widget :global(div) {
    max-width: 100% !important;
  }
</style>
