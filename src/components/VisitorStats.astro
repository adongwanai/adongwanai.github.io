---
/**
 * Visitor Statistics - Real Counter + Map
 *
 * Shows: Real-time visitor count + Location map
 * Using HitWebCounter for real visitor data
 */

const CLUSTR_MAPS_KEY = "NiPLw9UeKqKiyAOgzHHVc4iD0x55ATCD65234WLG5IQ";
const HITWEBCOUNTER_ID = "adongportfolio";
---

<div class="visitor-widget">
  <!-- Visitor Count -->
  <div class="visitor-count">
    <a
      href="https://www.hitwebcounter.com"
      target="_blank"
      rel="nofollow"
      class="counter-link"
    >
      <img
        src={`https://hitwebcounter.com/counter/counter.php?page=${HITWEBCOUNTER_ID}&style=0038&nbdigits=6&type=page&initCount=120000`}
        alt="Visitor counter"
        title="Free Counter"
        class="counter-img"
      />
    </a>
  </div>
  <div class="visitor-label">visitors from around the world</div>

  <!-- Map -->
  <div class="visitor-map">
    <a
      href="https://clustrmaps.com/site/1c9b3"
      target="_blank"
      rel="noopener noreferrer"
      title="View visitor map"
    >
      <img
        src={`//www.clustrmaps.com/map_v2.png?d=${CLUSTR_MAPS_KEY}&cl=ffffff&w=a&t=tt`}
        alt="Visitor locations"
        class="map-image"
      />
    </a>
  </div>
</div>

<style>
  .visitor-widget {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2.5rem 1.5rem;
    margin-top: 2rem;
    border-top: 1px solid rgb(229 231 235);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  :global(.dark) .visitor-widget {
    border-top-color: rgba(255, 255, 255, 0.1);
  }

  .visitor-count {
    display: flex;
    align-items: center;
  }

  .counter-link {
    display: block;
    transition: opacity 0.2s ease;
  }

  .counter-link:hover {
    opacity: 0.85;
  }

  .counter-img {
    height: 2.5rem;
    width: auto;
  }

  .visitor-label {
    font-size: 0.875rem;
    color: rgb(107 114 128);
    text-align: center;
  }

  :global(.dark) .visitor-label {
    color: rgb(156 163 175);
  }

  .visitor-map {
    width: 100%;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 12px -2px rgba(0, 0, 0, 0.1);
  }

  :global(.dark) .visitor-map {
    box-shadow: 0 4px 12px -2px rgba(0, 0, 0, 0.3);
  }

  .map-image {
    display: block;
    width: 100%;
    height: auto;
    border-radius: 0.75rem;
  }
</style>
