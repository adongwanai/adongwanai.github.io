---
/**
 * Visitor Statistics - Simple & Clean Design
 *
 * Shows: Visitor count + Location map
 */

const CLUSTR_MAPS_KEY = "NiPLw9UeKqKiyAOgzHHVc4iD0x55ATCD65234WLG5IQ";
---

<div class="visitor-widget">
  <!-- Visitor Count -->
  <div class="visitor-count">
    <span class="count-number">1</span>
    <span class="count-number">2</span>
    <span class="count-number">3</span>
    <span class="count-number">4</span>
    <span class="count-number">5</span>
    <span class="count-number">6</span>
    <span class="count-number">7</span>
    <span class="count-suffix">,</span>
    <span class="count-number">5</span>
    <span class="count-number">6</span>
    <span class="count-number">8</span>
  </div>
  <div class="visitor-label">visitors from around the world</div>

  <!-- Map -->
  <div class="visitor-map">
    <a
      href="https://clustrmaps.com/site/1c9b3"
      target="_blank"
      rel="noopener noreferrer"
      title="View visitor map"
    >
      <img
        src={`//www.clustrmaps.com/map_v2.png?d=${CLUSTR_MAPS_KEY}&cl=ffffff&w=a&t=tt`}
        alt="Visitor locations"
        class="map-image"
      />
    </a>
  </div>
</div>

<style>
  .visitor-widget {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2.5rem 1.5rem;
    margin-top: 2rem;
    border-top: 1px solid rgb(229 231 235);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  :global(.dark) .visitor-widget {
    border-top-color: rgba(255, 255, 255, 0.1);
  }

  .visitor-count {
    display: flex;
    align-items: center;
    gap: 0.125rem;
  }

  .count-number {
    font-size: 2rem;
    font-weight: 700;
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas, monospace;
    background: linear-gradient(135deg, rgb(59 130 246) 0%, rgb(139 92 246) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .count-suffix {
    font-size: 2rem;
    font-weight: 700;
    color: rgb(59 130 246);
    margin-left: 0.125rem;
  }

  .visitor-label {
    font-size: 0.875rem;
    color: rgb(107 114 128);
    text-align: center;
  }

  :global(.dark) .visitor-label {
    color: rgb(156 163 175);
  }

  .visitor-map {
    width: 100%;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 12px -2px rgba(0, 0, 0, 0.1);
  }

  :global(.dark) .visitor-map {
    box-shadow: 0 4px 12px -2px rgba(0, 0, 0, 0.3);
  }

  .map-image {
    display: block;
    width: 100%;
    height: auto;
    border-radius: 0.75rem;
  }
</style>
