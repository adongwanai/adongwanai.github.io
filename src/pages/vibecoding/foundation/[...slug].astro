const currentIndex = allFoundation.findIndex(n => n.slug === currentSlug);
const prevNote = currentIndex > 0 ? allFoundation[currentIndex - 1] : null;
const nextNote = currentIndex < allFoundation.length - 1 ? allFoundation[currentIndex + 1] : null;

// Get headings for TOC (h2 and h3 only)
