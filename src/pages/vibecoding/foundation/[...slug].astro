import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

const getPath = (path: string) => {
  const base = import.meta.env.BASE_URL;
  return base === '/' ? path : `${base.replace(/\/$/, '')}${path}`;
};

export async function getStaticPaths() {
  const allNotes = await getCollection('vibecoding');
  const foundationNotes = allNotes.filter(note => note.data.category === 'foundation');
  return foundationNotes.map(note => ({
    params: { slug: note.slug.replace('foundation/', '') },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content, headings } = await note.render();

const currentSlug = note.slug;

// Get all foundation notes for sidebar navigation
