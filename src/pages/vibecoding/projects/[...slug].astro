<script>
  // TOC scroll-based highlighting
  function initTocHighlighter() {
    const tocLinks = document.querySelectorAll('.toc-link');
    if (tocLinks.length === 0) return;

    const headingIds = Array.from(tocLinks).map(link => link.getAttribute('data-heading'));

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          const id = entry.target.getAttribute('id');
          const link = document.querySelector(`.toc-link[data-heading="${id}"]`);

          if (link) {
            if (entry.isIntersecting) {
              // Remove active from all links
              tocLinks.forEach(l => {
                l.classList.remove('bg-violet-100', 'dark:bg-violet-900/30', 'text-violet-700', 'dark:text-violet-400', 'font-medium');
              });
              // Add active to current link
              link.classList.add('bg-violet-100', 'dark:bg-violet-900/30', 'text-violet-700', 'dark:text-violet-400', 'font-medium');
            }
          }
        });
      },
      {
        rootMargin: '-80px 0px -80% 0px',
        threshold: 0
      }
    );

    // Observe all headings
    headingIds.forEach(id => {
      const heading = document.getElementById(id);
      if (heading) {
        observer.observe(heading);
      }
    });

    // Click to scroll smoothly
    tocLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const id = link.getAttribute('data-heading');
        const heading = document.getElementById(id);
        if (heading) {
          heading.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  }

  // Run on page load and after any dynamic content
  document.addEventListener('DOMContentLoaded', initTocHighlighter);
</script>

