import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

const getPath = (path: string) => {
  const base = import.meta.env.BASE_URL;
  return base === '/' ? path : `${base.replace(/\/$/, '')}${path}`;
};

export async function getStaticPaths() {
  const allNotes = await getCollection('vibecoding');
  const projectNotes = allNotes.filter(note => note.data.category === 'project');
  return projectNotes.map(note => ({
    params: { slug: note.slug.replace('projects/', '') },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content, headings } = await note.render();

const isPremium = note.data.tier === 'premium';
const currentSlug = note.slug;

// Get all project notes for sidebar navigation
const allProjects = (await getCollection('vibecoding'))
  .filter(n => n.data.category === 'project')
  .sort((a, b) => a.data.order - b.data.order);

const currentIndex = allProjects.findIndex(n => n.slug === currentSlug);
const prevNote = currentIndex > 0 ? allProjects[currentIndex - 1] : null;
const nextNote = currentIndex < allProjects.length - 1 ? allProjects[currentIndex + 1] : null;

// Get headings for TOC (h2 and h3 only)
